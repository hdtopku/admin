<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.auth.mapper.UmsMenuMapper">

    <select id="selectByRoleIds" resultType="com.demo.auth.domain.entity.UmsMenu">
        select distinct m.*
        from ums_menu m
        left join ums_role_menu rm on m.id = rm.menu_id
        where m.status = 0 and m.deleted = 0 and rm.role_id in
        <foreach collection="roleIds" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>
</mapper>
